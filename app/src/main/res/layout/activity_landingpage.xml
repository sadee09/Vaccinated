<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landingpage"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/rel1">

        <TextView
            android:layout_width="224dp"
            android:layout_height="67dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kolkerbrush"
            android:text="Vaccinated"
            android:textColor="@color/purple_200"
            android:textSize="60dp" />
        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_person_pin_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="35dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_baseline_feedback_24" />


    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:text="Immunization Records"
                android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:textStyle="bold" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/purple_200"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/babyvaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BABY VACCINE"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 vaccines"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textStyle=""
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                android:id="@+id/imageViewbaby"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/baby1" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/purple_200"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pregnancyvaccine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREGNANCY VACCINE"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 vaccine with two doses"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textStyle=""
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageViewPreg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/preg1" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/purple_200"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/covid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COVID VACCINE"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Various vaccines"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textStyle=""
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCovid"
                    android:layout_width="54dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/covid" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="Map locating Vaccination Center"
            android:textColor="@color/purple_200"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewmap"
            android:layout_width="355dp"
            android:layout_height="355dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/map1" />
    </LinearLayout>






</ScrollView>