<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verocell"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/rel1">

        <TextView
            android:layout_width="224dp"
            android:layout_height="67dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/kolkerbrush"
            android:text="Vaccinated"
            android:textColor="@color/purple_200"
            android:textSize="80dp"
            android:layout_marginTop="70dp"/>
        <TextView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Verocell Vaccine"
            android:textColor="@color/purple_200"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="Recommended Age:Above 16"
            android:textColor="@color/purple_200"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Two doses 1 month apart"
            android:textColor="@color/purple_200"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="682dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="The Sinopharm BIBP COVID-19 vaccine, also known as Verocell, is one of two inactivated virus COVID-19 vaccines developed by Sinopharm's Beijing Institute of Biological Products.The vaccine is given by intramuscular injection into the deltoid muscle. The initial course consists of two doses, and there is no evidence that a third booster dose is needed. The World Health Organization (WHO) recommends an interval of 3 to 4 weeks between doses.A vaccine is generally considered effective if the estimate is â‰¥50% with a >30% lower limit of the 95% confidence interval.Effectiveness is generally expected to slowly decrease over time.It is also provided in a 2 dose."
            android:textColor="@color/purple_200"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>